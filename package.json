    "eslint-plugin-oxlint": "^1.39.0",
    "oxlint": "^1.39.0",
    "prettier": "^3.8.0",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-astro-organize-imports": "^0.4.11",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "name": "astro-erudite",
  "prettier": {
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ],
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss",
      "prettier-plugin-astro-organize-imports"
    ],
    "semi": true,
    "singleQuote": false
  },
  "private": true,
  "scripts": {
    "astro": "astro",
    "build": "git submodule update --remote && astro check && astro build",
    "dev": "astro dev",
    "format": "prettier --write **/*.{ts,tsx,css,astro} --ignore-path .gitignore",
    "lint": "oxlint --fix",
    "new:article": "bun run --bun ./utils/new-article.ts",
    "postinstall": "patch-package",
    "preview": "astro preview",
    "start": "astro dev"
  },
  "type": "module",
  "version": "1.6.2"
}
